# Database Configuration
DATABASE_URL=your_neon_database_url

# Sendgrid email configuration (optional, will use demo mode if not provided)
SENDGRID_API_KEY=your_sendgrid_api_key

# Web3 Configuration
VITE_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# Global Environment Configuration
VITE_APP_MODE=STEALTH
# STEALTH (testing/private) or PUBLIC (production)
VITE_APP_NAME=App
# App (STEALTH) or FSN (PUBLIC)
VITE_TLD_LABEL=.id
# .id (STEALTH) or .fsn (PUBLIC)
VITE_CHAIN_NAME=Devnet
# Devnet (STEALTH) or Base Sepolia/Base (PUBLIC)
VITE_LOCAL_RPC_URL=http://127.0.0.1:8545
# Local Hardhat node RPC
VITE_BASE_SEPOLIA_RPC_URL=https://sepolia.base.org
# Base Sepolia RPC (set when PUBLIC)

# Feature Flags
VITE_ENABLE_ANALYTICS=false
# Analytics tracking (false in STEALTH)
VITE_ENABLE_SHARE_LINKS=false
# Referral sharing (false in STEALTH)
VITE_ENABLE_EVENT_BADGES=false
# On-chain verification badges (false in STEALTH)
VITE_ENABLE_PUBLIC_GATEWAY=false
# IPFS gateway links (false in STEALTH)
VITE_REFERRAL_ENABLED=true
# Referral system enabled
VITE_REFERRAL_BONUS_XP=100
# XP bonus for successful referrals

# Daily XP Minting Configuration
AWARD_ONCHAIN=false
# Set to true only when PUBLIC and ready to mint on-chain
AWARD_PRIVATE_KEY=0x1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef
# Dedicated hot wallet for XP awarding (NOT your deployer key)
RPC_URL=http://127.0.0.1:8545
# Use http://127.0.0.1:8545 for STEALTH, Base Sepolia RPC for PUBLIC
POINTS_ADDRESS=0x1234567890123456789012345678901234567890
# Points contract address from deployments/local.json or base-sepolia.json
AWARD_XP_DAILY=10
# XP amount to award for daily login
CRON_SECRET=change-me-in-production
# Secret token to protect cron endpoints
REFERRAL_BONUS_XP=100
# XP amount to award for successful referrals

# Email Configuration
EMAIL_ENABLED=false
EMAIL_REQUIRED_FOR_CLAIM=false

# Vault Storage Configuration
VAULT_MAX_MB=25
# Maximum file size in MB
VAULT_ALLOWED_MIME=image/png,image/jpeg,application/pdf,text/plain
# Allowed MIME types (comma-separated)
IPFS_PROVIDER=pinata
# IPFS provider: pinata or web3storage
IPFS_API_KEY=your_pinata_api_key
# Pinata API key or Web3.Storage token
IPFS_SECRET_KEY=your_pinata_secret_key
# Pinata secret key (not needed for Web3.Storage)
IPFS_GATEWAY=https://gateway.pinata.cloud/ipfs/
# IPFS gateway URL for PUBLIC mode
FILES_ADDRESS=0x1234567890123456789012345678901234567890
# Files contract address for on-chain anchoring
VAULT_MAX_FILES_PER_DAY=20
# Daily upload limit per wallet