:root{
  --bg:#070b10;
  --text:#f4f7fb;
  --cyan:#4cc3ff;
  --cyan-deep:#1f7bdc;
  --teal:#19d6a9;
  --orange:#ff9a4d;
}
html,body{margin:0;padding:0}
.page{min-height:100vh;background:var(--bg);color:var(--text);
  font-family:system-ui,Inter,Segoe UI,Roboto,Helvetica,Arial,sans-serif}

/* ——— Comp overlay (optional): put apps/web/public/comp-overlay.png and press "O" ——— */
#comp-overlay{
  position: fixed; inset: 0; pointer-events:none; z-index: 9999; display:none;
  background: center/contain no-repeat url("/comp-overlay.png");
  opacity: .32; mix-blend-mode: normal;
}
body.show-overlay #comp-overlay{ display:block; }

/* ===== HERO GRID ===== */
.hero{
  position:relative; overflow:hidden; min-height:100vh;
  display:grid; grid-template-columns: 50% 50%;
  align-items:center;
  column-gap: clamp(28px, 5.4vw, 72px);
  padding: clamp(22px, 3.6vw, 56px);
}
@media (max-width: 1100px){ .hero{ grid-template-columns:1fr; row-gap:32px } }

/* ===== LEFT: ORB ===== */
.orb{
  position:relative;
  width:min(46vw, 820px);      /* tuned smaller */
  aspect-ratio:1/1;
  margin-left: -6vw;           /* less off-screen */
}
.orb-glow{
  position:absolute; inset:-10%; border-radius:9999px;
  background:
    radial-gradient(closest-side, rgba(76,195,255,.45), transparent 64%),
    radial-gradient(farthest-side, rgba(255,154,77,.35), transparent 66%);
  filter: blur(28px);
}
.orb-ring{
  position:absolute; inset:0; border-radius:9999px;
  background:
    radial-gradient(42% 42% at 50% 52%, rgba(0,0,0,.62), transparent 64%),
    conic-gradient(from -6deg,                         /* seam angle */
      #68c9ff 0deg, transparent 94deg,
      #e58b47 182deg, transparent 270deg,
      #68c9ff 350deg);
  mask: radial-gradient(circle at 50% 50%, transparent 58%, black 60%);
  box-shadow: 0 0 36px rgba(76,195,255,.25), 0 0 64px rgba(255,154,77,.18);
  animation: spin 24s linear infinite;
}
.orb-center{
  position:absolute; inset:18% 18% 18% 18%; border-radius:9999px;
  background:
    radial-gradient(72% 72% at 50% 50%, #121922 0%, #0c131a 58%, transparent 72%),
    radial-gradient(38% 38% at 50% 48%, rgba(0,0,0,.35), rgba(0,0,0,.0) 60%),
    radial-gradient(26% 26% at 50% 52%, rgba(0,0,0,.35), rgba(0,0,0,.0) 58%);
  box-shadow: inset 0 0 140px rgba(0,0,0,.5);
}
.wedge{
  position:absolute; inset:0; border-radius:9999px; mix-blend-mode:multiply; pointer-events:none;
  background: conic-gradient(from 15deg, rgba(0,0,0,.38) 0 22deg, transparent 22deg 360deg);
  transform: rotate(74deg); /* ~1 o’clock tune */
  filter: blur(1.5px);
}
.wedge.w2{
  transform: rotate(256deg); /* ~7 o’clock tune */
  background: conic-gradient(from 18deg, rgba(0,0,0,.45) 0 26deg, transparent 26deg 360deg);
}
.wordmark{ position:absolute; inset:0; display:grid; place-items:center; pointer-events:none; transform: translateY(2%) }
.wordmark svg{ width:34%; height:auto }
@keyframes spin{ to { transform:rotate(360deg) } }

/* ===== RIGHT: COPY ===== */
.copy{ position:relative; z-index:1 }
.h1{
  margin:0;
  font-weight:900; letter-spacing:-0.02em; line-height:1.02;
  font-size: clamp(44px, 6.2vw, 84px);  /* smaller */
  text-shadow: 0 2px 0 rgba(0,0,0,.18);
  transform: translateY(-10px);         /* lower */
}
.h1 .alive{ color:var(--teal) }

/* CTAs — thicker rims + spacing */
.ctas{ display:flex; gap:14px; flex-wrap:wrap; margin: 18px 0 24px }
.btn{
  display:inline-block; text-decoration:none; font-weight:800; letter-spacing:.01em;
  padding: 15px 24px; border-radius:999px;
  box-shadow: 0 14px 30px rgba(0,0,0,.38), inset 0 2px 0 rgba(255,255,255,.12);
}
.btn-primary{
  color:#fff; background: linear-gradient(180deg, var(--cyan), var(--cyan-deep));
  border:4px solid rgba(59,130,246,.60);
}
.btn-outline{
  color:#c7ffee; background: rgba(25,214,169,.08);
  border:4px solid rgba(25,214,169,.70);
  box-shadow: 0 14px 30px rgba(0,0,0,.38), inset 0 0 22px rgba(25,214,169,.22);
}

/* Secondary block */
.sub{ margin-top: 6px }
.sub h2{ margin:0 0 10px 0; font-weight:900; letter-spacing:-0.02em; line-height:1.08;
  font-size: clamp(28px, 4.4vw, 46px); color:#eaf6ff }
.chips{ display:flex; gap:12px; flex-wrap:wrap; align-items:center; margin:8px 0 12px }
.chip{ display:flex; align-items:center; gap:10px; padding:8px 12px; border-radius:14px;
  background: rgba(255,255,255,.055); border:1px solid rgba(255,255,255,.14); color:#b9ecff; font-weight:700 }
.chip .dot{ width:28px; height:28px; border-radius:999px; background: radial-gradient(circle at 30% 30%, #d7f4ff, #19a1ff); box-shadow: 0 0 16px rgba(25,161,255,.45)}
.chip.ghost{ opacity:.42 }
.meta{ margin: 2px 0 0; font-size: clamp(14px, 2.2vw, 20px); color: rgba(255,255,255,.9) }
.meta .base{ color:var(--teal); font-weight:800 }
.meta .rep{ color:var(--cyan); font-weight:800 }
.foot{ margin: 10px 0 0; color: rgba(255,255,255,.82) }
.bullet{ display:inline-block; width:12px; height:12px; border-radius:999px; background:#f1bf6b; margin-right:9px; box-shadow: 0 0 10px rgba(241,191,107,.6) }

/* ===== CHAMELEON ===== */
.cham-panel{
  position:absolute;
  right: 12vw;   /* move left by increasing this */
  top: 11vh;     /* lift */
  width: 27vw;   /* slightly smaller */
  aspect-ratio: 0.78/1;
  border-radius: 8px;
  background:
    radial-gradient(120% 120% at 50% 60%, rgba(18,24,34,.0) 40%, rgba(18,24,34,.8) 100%),
    linear-gradient(180deg, rgba(12,18,26,.94), rgba(8,12,18,.92));
  box-shadow: 0 36px 120px rgba(0,0,0,.55), 0 0 70px rgba(28,120,220,.18);
  overflow:hidden;
  z-index:0;
}
.cham{
  position:absolute; inset:auto; bottom: 7%; left: 9%;
  width: 84%; height:auto; display:block;
  filter: drop-shadow(0 0 18px rgba(60,130,246,.20));
  animation: float 7s ease-in-out infinite;
  user-select:none; -webkit-user-drag:none;
}
@keyframes float{0%,100%{transform:translateY(0)}50%{transform:translateY(-6px)}}

/* tiny stars (subtle) */
.bg-stars{ position:absolute; inset:0; pointer-events:none; z-index:0;
  background-image:
    radial-gradient(2px 2px at 14% 26%, rgba(255,255,255,.55), rgba(255,255,255,0)),
    radial-gradient(1.5px 1.5px at 44% 15%, rgba(255,255,255,.48), rgba(255,255,255,0));
  background-repeat:no-repeat; opacity:.28 }

/* ==== ABS DEBUG (unmissable) ==== */
body.canvas-abs::after{
  content: "ABS MODE";
  position: fixed; top: 10px; left: 10px; z-index: 10002;
  padding: 6px 10px; border-radius: 10px;
  background: linear-gradient(90deg, rgba(0,0,0,.75), rgba(0,0,0,.5));
  color: #a7ffdf; font: 12px ui-monospace,Menlo,monospace; letter-spacing:.08em;
  border: 1px solid rgba(167,255,223,.35);
  box-shadow: 0 0 0 2px rgba(167,255,223,.18), 0 8px 24px rgba(0,0,0,.45);
}

/* outline the scaled canvas so you SEE the toggle */
body.canvas-abs .canvas{
  box-shadow: inset 0 0 0 3px rgba(25,214,169,.55);
}

/* make sure abs mode actually changes something even if positions aren't set yet */
body.canvas-abs .canvas .copy{ position:absolute !important; }
body.canvas-abs .canvas .ctas{ position:absolute !important; }
body.canvas-abs .canvas .cham-panel{ position:absolute !important; }

/* ===== ABS pixel layout (takes effect only with body.canvas-abs) ===== */
:root{
  /* starter values — adjust after you see the snap */
  --orb-x: 40;     --orb-y: 120;   --orb-size: 980;
  --copy-x: 860;   --copy-y: 150;  --copy-w: 520;
  --ctas-x: 860;   --ctas-y: 300;
  --cham-x: 1040;  --cham-y: 110;  --cham-w: 380; --cham-h: 560;
}

/* When ABS is ON, absolutely position the hero parts by those variables */
body.canvas-abs .canvas .orb{
  position:absolute !important;
  left: calc(var(--orb-x) * 1px); top: calc(var(--orb-y) * 1px);
  width: calc(var(--orb-size) * 1px); height: calc(var(--orb-size) * 1px);
  margin: 0 !important;
}
body.canvas-abs .canvas .copy{
  position:absolute !important;
  left: calc(var(--copy-x) * 1px); top: calc(var(--copy-y) * 1px);
  width: calc(var(--copy-w) * 1px);
}
body.canvas-abs .canvas .ctas{
  position:absolute !important;
  left: calc(var(--ctas-x) * 1px); top: calc(var(--ctas-y) * 1px);
  margin: 0 !important;
}
body.canvas-abs .canvas .cham-panel{
  position:absolute !important;
  left: calc(var(--cham-x) * 1px); top: calc(var(--cham-y) * 1px);
  width: calc(var(--cham-w) * 1px); height: calc(var(--cham-h) * 1px);
  right:auto !important; bottom:auto !important;
}

/* ===== ABS pixel layout using mapped IDs ===== */
:root{
  /* tweak these once mapped */
  --orb-x: 40;     --orb-y: 120;   --orb-size: 980;
  --copy-x: 860;   --copy-y: 150;  --copy-w: 520;
  --ctas-x: 860;   --ctas-y: 300;
  --cham-x: 1040;  --cham-y: 110;  --cham-w: 380; --cham-h: 560;
}

body.canvas-abs #abs-orb{
  position:absolute !important;
  left: calc(var(--orb-x)*1px); top: calc(var(--orb-y)*1px);
  width: calc(var(--orb-size)*1px); height: calc(var(--orb-size)*1px);
  margin:0 !important;
}
body.canvas-abs #abs-copy{
  position:absolute !important;
  left: calc(var(--copy-x)*1px); top: calc(var(--copy-y)*1px);
  width: calc(var(--copy-w)*1px);
}
body.canvas-abs #abs-ctas{
  position:absolute !important;
  left: calc(var(--ctas-x)*1px); top: calc(var(--ctas-y)*1px);
  margin:0 !important;
}
body.canvas-abs #abs-cham{
  position:absolute !important;
  left: calc(var(--cham-x)*1px); top: calc(var(--cham-y)*1px);
  width: calc(var(--cham-w)*1px); height: calc(var(--cham-h)*1px);
  right:auto !important; bottom:auto !important;
}

/* mapping UI hint */
.abs-pick-hint{
  position:fixed; top:10px; right:10px; z-index:10003;
  padding:6px 10px; border-radius:10px; background:rgba(0,0,0,.7);
  color:#fff; font:12px ui-monospace,monospace; border:1px solid rgba(255,255,255,.25);
}
.abs-pick-target{ outline:2px dashed #00f5a0 !important; outline-offset:2px !important; cursor:crosshair !important; }
